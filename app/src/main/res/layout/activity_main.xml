<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tombol_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_toast" />

    <TextView
        android:id="@+id/txt_angka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="256sp"
        android:textAlignment="center"
        android:background="@color/yellow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tombol_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_count"
            android:layout_weight="1"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/tombol_kurang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_minus" />

    </LinearLayout>







</LinearLayout>